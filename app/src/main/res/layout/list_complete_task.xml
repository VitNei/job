<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    <TextView
            android:id="@+id/complete_note"
            android:layout_width="wrap_content"
            android:text="Crime Title"
            android:layout_marginTop="8dp" app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/complete_task_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Crime Date"
            app:layout_constraintTop_toBottomOf="@+id/complete_note"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>