<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/tool_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tool_name"
            android:layout_width="0dp"
            android:text="Tool"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/tool_image" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tool_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Count"
            app:layout_constraintTop_toBottomOf="@+id/tool_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/tool_image"/>

</android.support.constraint.ConstraintLayout>